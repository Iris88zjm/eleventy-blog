<div class="article-wrapper">
  {%- for post in postsList -%}
  <div class="article-item">
    <div class="divimg">
      <img src="{{ post.data.postImage }}">
    </div>
    <div class="info">
      <div class="article-tags">
        <i class="iconfont icon-tags" aria-hidden="true"></i>
        <ul>
          {%- for tag in post.data.tags -%}
          <li>
            <a href="/tags/{{ tag }}/" class="btn-tag">{{ tag }}</a>
          </li>
          {%- endfor -%}
        </ul>
      </div>            
        <h2>
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h2>
        <div class="article-date">{{ post.data.date | date: "%Y-%m-%d" }}</div>
        <div class="desc">
          <p>{{ post.data.pageDescription }}</p>
        </div>
        <a class="btn btn-text" href="{{ post.url }}">          
          {% if lang == "zh" %}
          阅读更多
          {% else %}
          learn more
          {% endif %}  
        </a>
      </div>
  </div>
  {%- endfor -%}
</div>