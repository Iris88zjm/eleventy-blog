---
layout: zh.liquid
pageSlug: single-tag
pageDescription: Single tag pages description
permalink: /tags/{{ tag | slug }}/
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
    - tagList
  addAllPagesToCollections: true
eleventyComputed:
  title: 分类 - {{ tag }}
---
<section id="hero">
  <div class="divimg"
  style="
  {% if tag == 'css' %} background-image: {{ postHero[0] }}
  {% elsif tag == 'eleventy'%} background-image: {{ postHero[1] }}
  {% elsif tag == 'html'%} background-image: {{ postHero[2] }}
  {% elsif tag == 'javascript'%} background-image: {{ postHero[3] }}
  {% elsif tag == 'linux'%} background-image: {{ postHero[4] }}
  {% elsif tag == 'tech' %} background-image: {{ postHero[5] }}
  {% elsif tag == 'wordpress' %} background-image: {{ postHero[6] }}
  {% elsif tag == 'git' %} background-image: {{ postHero[7] }}
  {% else %} background-image: {{ postHero[8] }}
  {% endif %}"
  ></div>
  <div class="content">
    <h1>分类 - {{ tag }}</h1>
  </div>
</section>
<section class="container">
  <div class="see-all-tags">See <a href="{{ '/tags/' | url }}">all tags</a>.</div>

  {% assign postsList = collections[tag] | reversePosts %}
  {% include './components/postsList' %}
</section>
