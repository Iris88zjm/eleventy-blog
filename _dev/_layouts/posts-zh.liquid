---
layout: zh.liquid
cssFiles: ["single-post"]
---
<section id="hero">
  {% include './components/post-hero', tag: tags[0] %}
  
  <div class="content">
    <h1>{{ title }}</h1>
  </div>
</section>
<div class="wrapper">
  <div class="post-info">
    <a href="/archives/1/" class="btn btn-text">查看所有文章</a>
    <div class="date font-size-xs">{{ date | date: "%Y-%m-%d" }}</div>
    <ul class="tag-list">
      {%- for tag in tags -%}
      <li>
        <a href="/tags/{{ tag }}/" class="btn-tag">{{ tag }}</a>
      </li>
      {%- endfor -%}
    </ul>
  </div>

  <div class="content">
    {{ content | safe }}
  </div>

  <div class="switch-posts">
    {% assign previousPost = collections.posts | getPreviousCollectionItem: page %}
    {% assign nextPost = collections.posts | getNextCollectionItem: page %}
    {% if nextPost %}
    <div class="item">
      <div class="lable">上一篇: </div>
      <a href="{{ nextPost.url }}" class="text-link">{{ nextPost.data.title }}</a>
    </div>
    {% endif %}
    {% if previousPost %}
    <div class="item">
      <div class="lable">下一篇: </div>
      <a href="{{ previousPost.url }}" class="text-link">{{ previousPost.data.title }}</a>
    </div>
    {% endif %}
  </div>

</div>