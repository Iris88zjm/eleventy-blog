---
layout: en.liquid
---
<section id="hero">
  <div class="divimg">
    <img src="{{ postImage }}" alt="">
  </div>
  <div class="content">
    <h1>{{ title }}</h1>
  </div>
</section>
<div class="container">
  <div class="post-info">
    <a href="/archives/" class="btn">back to archives</a>
    <div class="date">{{ date | date: "%Y-%m-%d" }}</div>
    <ul class="tags">
      {%- for tag in tags -%}
      <li>
        <a href="/tags/{{ tag }}/" class="btn-tag">{{ tag }}</a>
      </li>
      {%- endfor -%}
    </ul>
  </div>

  <div class="wrapper">
    {{ content | safe }}
  </div>

  <div class="switch-posts">
    {% assign previousPost = collections.posts | getPreviousCollectionItem: page %}
    {% assign nextPost = collections.posts | getNextCollectionItem: page %}
    {% if previousPost %}
    <div class="item">
      <div class="lable">Previous Post: </div>
      <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a>
    </div>
    {% endif %}
    {% if nextPost %}
    <div class="item">
      <div class="lable">Next Post: </div>
      <a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
    </div>
    {% endif %}
  </div>
  
</div>